extends layout

block content
  h1=title
  
  form(method='POST')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text', placeholder='min. 2 litery' name='first_name' required value=(undefined===user ? "" : user.first_name))
      label(for='last_name') Last Name:
      input#last_name.form-control(type='text', placeholder='min. 2 litery' name='last_name' required value=(undefined===user ? "" : user.last_name))
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='min. 3 litery' name='username' required value=(undefined===user ? "" : user.username))
      label(for='password') Password:
      input#password.form-control(type='password', placeholder='min. 8 znak√≥w' name='password' required value=(undefined===user ? "" : user.password))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg